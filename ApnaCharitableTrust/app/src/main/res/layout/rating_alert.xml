<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_ratings"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/img_icon"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like Using"
                android:textStyle="normal"
                android:fontFamily="@font/arialregular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/arialmedium"
                android:text="Apna Charitable Trust?"
                android:textSize="18sp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/arialregular"
            android:layout_centerHorizontal="true"
            android:text="Recommend us to others by"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/txt_playstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/arialregular"
            android:layout_below="@id/txt_recommend"
            android:layout_centerHorizontal="true"
            android:text=" rating us on Play Store "
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btn_rating"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/btn_white"
            android:backgroundTint="@color/orange"
            android:text="Rate Us"
            android:fontFamily="@font/arialregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/txt_playstore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>